<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/main_title_bar"
        android:id="@+id/fragment_feed_ll"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/fragment_feed_left_rl_attention"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_feed_left_tv_attention"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:text="关注"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_feed_left_rl_hot"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/fragment_feed_left_tv_hot"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:clickable="true"
                android:layout_height="wrap_content"
                android:text="热门"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fragment_feed_left_rl_nearby"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_feed_left_tv_nearby"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:textSize="15dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="附近"

                />
        </RelativeLayout>


    </LinearLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_feed_left_viewpagerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



</LinearLayout>