<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_title_iv_person"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:src="@android:drawable/ic_btn_speak_now"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_feed_title_tv_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:text="动态"
                android:onClick="click"
                android:textSize="25dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/fragment_feed_tv_yue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:gravity="center"
                android:src="@android:drawable/ic_btn_speak_now"
                android:onClick="click"
                android:text="约伴"
                android:textSize="25dp"

                android:textStyle="bold"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/fragment_feed_title_tv_senddynamic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@android:drawable/ic_btn_speak_now"
            android:text="发动态"
            android:onClick="click"
            android:textSize="20dp"
            android:textStyle="bold"
            />


    </RelativeLayout>




    <FrameLayout
        android:id="@+id/fragment_feed_tabsconten"
        android:layout_below="@id/main_title_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </FrameLayout>





</RelativeLayout>