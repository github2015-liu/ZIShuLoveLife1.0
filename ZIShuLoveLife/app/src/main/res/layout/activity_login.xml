<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#6b50f2"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/ic_back_normal"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册"
            android:textColor="#fcfcfa"
            android:textSize="25dp"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_login_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:text="欢迎光临,登录后享受更多服务"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/activity_login_tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:textSize="25sp"
                android:clickable="true"
                android:layout_marginRight="5dp"
                android:text="登录"

                />

            <TextView
                android:id="@+id/activity_login_tv_regist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:textSize="25sp"
                android:text="注册"
                />

        </LinearLayout>

    </RelativeLayout>

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/activity_login_tv_username"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#153e6c"
        android:layout_marginRight="15dp"
        android:hint="用户名/手机/电子邮箱"
        android:gravity="center_vertical"

        />

    <EditText
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/activity_login_tv_pwd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#153e6c"
        android:layout_marginRight="15dp"
        android:inputType="textPassword"
        android:hint="密码"
        android:gravity="center_vertical"

        />

    <CheckBox
        android:id="@+id/activity_login_cb"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一个月内免登录"/>


    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/activity_login_tv_loginnow"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#153e6c"
        android:layout_marginRight="15dp"
        android:textColor="#ffffff"
        android:text="立即登录"
        android:textSize="18sp"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/activity_login_tv_forgetpwd"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="#0abeff"
        android:layout_marginRight="15dp"
        android:text="忘记密码"
        android:clickable="true"

        />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:text="使用合作账号登录"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        >

        <ImageView

            android:id="@+id/activity_login_qq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent"
            />

        <ImageView
            android:id="@+id/activity_login_sina"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimary"
            />

        <ImageView
            android:id="@+id/activity_login_zhifubao"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"
            />
    </LinearLayout>






</LinearLayout>